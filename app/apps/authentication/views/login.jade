extends ../../../views/layout

block content
  div.span5.offset3.bordersform
    legend
      | Login
    fieldset
      form(action='/sessions', method='post').form-inline
        div(style="padding-left:10px;")
          div.control-group
            label.control-label
              | Email
            div.controls
              input(type='email', name='email', required="required").input-xlarge  
          div.control-group
            label.control-label
              | Password
            div.controls
              input(type='password', name='password', required="required").input-xlarge
        div.form-actions
          button(type='submit').btn.btn-primary
            | Submit
          a(href='/auth/facebook') Login with Facebook
      label.control-label
        | Don't want to use Facebook?
        small
          a(style="display:block;",href="/signup")
            | Sign up now with your email!

